<!DOCTYPE html>
<html lang="pt-BR" class="transition-colors duration-300">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class'
    }
  </script>
  <title>Princesa Reborn - Cadastrar Sku</title>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 flex flex-col min-h-screen font-sans transition-colors duration-300">

  <%- include('partials/header') %>

  <main class="flex-grow container mx-auto p-6">
    <div class="bg-white dark:bg-gray-800 max-w-md mx-auto rounded shadow p-6">
      <h1 class="text-2xl font-bold mb-6 text-center">Cadastrar Foto por SKU</h1>
      <form action="/cadastrar-sku" method="POST" enctype="multipart/form-data" class="space-y-4">

        <div>
          <label class="block font-medium mb-1">SKU:</label>
          <input
            type="text"
            name="sku"
            required
            class="w-full border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div>
          <label class="block font-medium mb-1">Pre√ßo:</label>
          <input
            type="number"
            step="0.01"
            name="preco"
            class="w-full border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div>
          <label class="block font-medium mb-1">Foto:</label>
          <input
            type="file"
            name="foto"
            accept="image/*"
            required
            class="w-full file:border file:border-gray-300 file:dark:border-gray-600 file:bg-white file:dark:bg-gray-700 file:text-gray-800 file:dark:text-gray-100 file:rounded file:px-3 file:py-2"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition"
        >
          Cadastrar
        </button>
      </form>
    </div>
  </main>
  <%- include('partials/whatsapp') %>

  <%- include('partials/footer') %>
  <script src="/js/darkmode.js"></script>

</body>
</html>
